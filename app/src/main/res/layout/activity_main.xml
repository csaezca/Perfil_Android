<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/foto_imagen"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:src="@tools:sample/avatars" />

        <EditText
            android:id="@+id/id_Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/foto_imagen"
            android:layout_alignTop="@id/foto_imagen"
            android:layout_marginStart="16dp"
            android:hint=" Nombre"/>
        <EditText
            android:id="@+id/id_Apodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/foto_imagen"
            android:layout_alignBottom="@id/foto_imagen"
            android:layout_marginStart="16dp"
            android:hint=" Apodo"/>

        <View
            android:id="@+id/linea_divisoria"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/foto_imagen"
            android:layout_marginTop="16dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linea_divisoria"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Biographic"/>


    </RelativeLayout>
</layout>